<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.daidaijie.syllabusapplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SyllabusActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.LessonInfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.ClassmateListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.LessonManagerActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.ExamActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.STUCircleActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.PhotoDetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.CircleDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".activity.ExamDetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.PostContentActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.GradeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.OfficeAutomationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.OADetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher.BG">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".services.StreamService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity
            android:launchMode="singleTop"
            android:name=".activity.LoginInternetActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.LibraryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".activity.BookDetailActivity">
        </activity>
    </application>

</manifest>