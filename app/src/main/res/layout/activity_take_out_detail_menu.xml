<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_out_detail_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daidaijie.syllabusapplication.activity.TakeOutDetailMenuActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:layout_marginBottom="-24dp">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:transitionName="lesson_grid"
            tools:targetApi="lollipop">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="tool_bar"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:statusBarScrim="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/takeoutNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dp"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">

                    <TextView
                        android:id="@+id/takeoutNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="64dp"
                        android:textColor="@color/material_white"
                        android:textSize="20sp"
                        tools:text="老四小炒"/>

                    <TextView
                        android:id="@+id/longNumberTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/takeoutNameTextView"
                        android:layout_marginLeft="64dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/material_white"
                        android:textSize="14sp"
                        tools:text="长号 : 13355522667"/>

                    <TextView
                        android:id="@+id/shortNumberTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/conditionTextView"
                        android:layout_below="@+id/longNumberTextView"
                        android:layout_marginLeft="64dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/material_white"
                        android:textSize="14sp"
                        tools:text="短号 : 642667"/>

                    <TextView
                        android:id="@+id/conditionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:background="#402B2B2B"
                        android:paddingBottom="4dp"
                        android:paddingLeft="64dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/defaultLightBackground"
                        android:textSize="12sp"
                        tools:text="备注 : 15元起送"/>
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <com.example.daidaijie.syllabusapplication.widget.CustomMarqueeTextView
                        android:id="@+id/titleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="56dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingTop="8dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:text="东门菜单"/>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_action_phone"
            app:layout_anchor="@id/swipeRefreshLayout"
            app:layout_anchorGravity="top|end"/>

        <include layout="@layout/content_take_out_detail"/>
    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/defaultTextColor">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/shoppingLayout"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp">

            <ImageView
                android:id="@+id/shoppingImg"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_img_shopping"
                android:elevation="1dp"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_shopping_car"
                tools:targetApi="lollipop"/>

            <TextView
                android:id="@+id/buyNumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-12dp"
                android:layout_toRightOf="@+id/shoppingImg"
                android:background="@drawable/bg_buy_num"
                android:elevation="1dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/material_white"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
